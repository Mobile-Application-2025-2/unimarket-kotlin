<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootBuyerFixed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER (fijo) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/brandBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/imgBrand"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/personajesingup"/>

            <TextView
                android:id="@+id/tvBrand"
                style="@style/TextAppearance.App.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <ImageButton
                android:id="@+id/btnFavorites"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favoritos"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/text_primary"
                android:src="@drawable/heart"/>

            <ImageButton
                android:id="@+id/btnOrdersTop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Carrito"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/text_primary"
                android:src="@drawable/carrito"/>
        </LinearLayout>
    </LinearLayout>

    <!-- BARRA DE BÃšSQUEDA (fija) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/lightGray"
        app:strokeColor="@android:color/transparent"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/material_symbols_search_rounded"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Buscar en unimarket"
                android:textSize="16sp"
                android:singleLine="true" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- LISTA (scroll entre header+search y footer) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="84dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/product_card"
        tools:itemCount="6"/>

    <!-- FOOTER (fijo) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/yellowLight"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TopRoundedOnly">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:weightSum="4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="home"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_shopping_front_24"/>

            <ImageButton
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="search"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/footer_shopping_bag_24"
                app:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/nav_map"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="map"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/map"/>

            <ImageButton
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="profile"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/baseline_person_outline_24"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>