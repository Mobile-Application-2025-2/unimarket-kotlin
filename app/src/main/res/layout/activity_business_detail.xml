<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBusinessDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <!-- HERO -->
    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/formas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Acciones arriba -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:src="@drawable/back"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/layoutTopActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/heart"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_business_favorite"/>

        <ImageButton
            android:id="@+id/btnOrders"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/carrito"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_business_orders"/>
    </LinearLayout>

    <!-- CONTENIDO -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        app:layout_constraintTop_toBottomOf="@id/imgHero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        android:layout_marginTop="-48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Tarjeta blanca que se solapa con el banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBusinessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="36dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <!-- LOGO redondo centrado y superpuesto -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgBusinessLogo"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"
                            android:translationY="-28dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/personajesingup"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                            app:strokeColor="@color/yellowStroke"
                            app:strokeWidth="1dp"
                            android:contentDescription="@string/cd_business_logo"/>
                    </FrameLayout>

                    <!-- Nombre centrado -->
                    <TextView
                        android:id="@+id/tvBusinessName"
                        style="@style/TextAppearance.App.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        tools:text="Subway"/>

                    <!-- Fila: Rating + (200+) centrados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBusinessRating"
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="4.0 ★"/>

                        <TextView
                            android:id="@+id/tvBusinessRatingCount"
                            style="@style/TextAppearance.App.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:textColor="@color/textGray"
                            tools:text="(200+)"/>
                    </LinearLayout>

                    <!-- (Opcional) descripción/categorías debajo; los mantiene tu VM -->
                    <TextView
                        android:id="@+id/tvBusinessCategories"
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:textColor="@color/textGray"
                        tools:text="Sandwiches · Bebidas"/>

                    <!-- Chips tipo tabs -->
                    <HorizontalScrollView
                        android:id="@+id/scrollFilters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:paddingBottom="2dp">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupProductFilters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            app:chipSpacingHorizontal="10dp"/>
                    </HorizontalScrollView>

                    <!-- Título sección productos -->
                    <TextView
                        android:id="@+id/tvSectionTitle"
                        style="@style/TextAppearance.App.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:text="@string/business_products_title"/>

                    <!-- Grid productos -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBusinessProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="8dp"
                        tools:listitem="@layout/item_business_product"/>

                    <TextView
                        android:id="@+id/tvEmpty"
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/business_products_empty"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FOOTER (mantengo IDs y listeners de tu Activity) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/map"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_bottom_home"/>

        <ImageButton
            android:id="@+id/navFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/heart"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_bottom_favorites"/>

        <ImageButton
            android:id="@+id/navBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/footer_shopping_bag_24"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_bottom_orders"/>

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/person_outline_24"
            app:tint="@color/text_primary"
            android:contentDescription="@string/cd_bottom_profile"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
