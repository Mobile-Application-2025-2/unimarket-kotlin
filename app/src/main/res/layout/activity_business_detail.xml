<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBusinessDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:contentDescription="@string/cd_business_cover"
        android:scaleType="centerCrop"
        android:src="@drawable/formas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/heroScrim"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/header_wave"
        android:alpha="0.35"
        app:layout_constraintStart_toStartOf="@id/imgHero"
        app:layout_constraintTop_toTopOf="@id/imgHero"
        app:layout_constraintEnd_toEndOf="@id/imgHero"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:padding="12dp"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutTopActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_business_favorite"
            android:src="@drawable/heart"
            app:tint="@color/text_primary"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btnOrders"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_business_orders"
            android:src="@drawable/carrito"
            app:tint="@color/text_primary"
            android:padding="8dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgHero"
        android:layout_marginTop="-72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBusinessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgBusinessLogo"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="@string/cd_business_logo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/personajesingup"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                            app:strokeColor="@color/yellowStroke"
                            app:strokeWidth="1dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBusinessName"
                                style="@style/TextAppearance.App.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                tools:text="Subway"/>

                            <TextView
                                android:id="@+id/tvBusinessCategories"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textGray"
                                tools:text="Sandwiches Â· Bebidas"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:contentDescription="@string/cd_business_rating"
                                    android:src="@drawable/star_rating"/>

                                <TextView
                                    android:id="@+id/tvBusinessRating"
                                    style="@style/TextAppearance.App.Body"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"
                                    tools:text="4.0"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvBusinessRatingCount"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textGray"
                                tools:text="(200+)"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBusinessDescription"
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/text_primary"
                        tools:text="Explora nuestros mejores combos universitarios"/>

                    <HorizontalScrollView
                        android:id="@+id/scrollFilters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:overScrollMode="never"
                        android:paddingBottom="4dp"
                        android:scrollbars="none">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupProductFilters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleLine="true"
                            app:selectionRequired="true"
                            app:singleSelection="true"
                            app:chipSpacingHorizontal="10dp"
                            app:chipSpacingVertical="0dp"/>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/tvSectionTitle"
                        style="@style/TextAppearance.App.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:text="@string/business_products_title"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBusinessProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_business_product"/>

                    <TextView
                        android:id="@+id/tvEmpty"
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/business_products_empty"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_bottom_home"
            android:padding="12dp"
            android:src="@drawable/map"
            app:tint="@color/text_primary"/>

        <ImageButton
            android:id="@+id/navFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_bottom_favorites"
            android:padding="12dp"
            android:src="@drawable/heart"
            app:tint="@color/text_primary"/>

        <ImageButton
            android:id="@+id/navBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_bottom_orders"
            android:padding="12dp"
            android:src="@drawable/footer_shopping_bag_24"
            app:tint="@color/text_primary"/>

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_bottom_profile"
            android:padding="12dp"
            android:src="@drawable/person_outline_24"
            app:tint="@color/text_primary"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>