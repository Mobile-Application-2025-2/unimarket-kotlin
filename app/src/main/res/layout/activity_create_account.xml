<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <!-- Formas de fondo -->
        <ImageView
            android:id="@+id/bgShapes"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:src="@drawable/formas"
            android:alpha="0.25"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón volver circular: blanco + solo borde -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backCard"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/googleStroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_24"
                app:tint="@color/textGray"
                android:contentDescription="@string/back" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Título centrado -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.App.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_your_account"
            android:textColor="@color/yellowLight"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/backCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <!-- Outlook (Card pill con control de icono) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnOutlook"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/outlookBlue"
            app:cardCornerRadius="38dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/iconOutlook"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/outlook"
                    app:tint="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:text="@string/continue_with_outlook"
                    android:textAppearance="@style/TextAppearance.App.Button"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Google (Card pill outlined con control de icono) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="38dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/googleStroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnOutlook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/iconGoogle"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google"
                    app:tint="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:text="@string/continue_with_google"
                    android:textAppearance="@style/TextAppearance.App.Button"
                    android:textColor="@color/text_primary"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Separador -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvOr"
            style="@style/TextAppearance.App.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/or_login_with_email"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            style="@style/Widget.App.FilledInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_check_24"
            app:endIconTint="@color/accent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                style="@style/TextAppearance.App.Input"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:hint="@string/hint_name"
                android:textColorHint="@color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.App.FilledInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tilName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_check_24"
            app:endIconTint="@color/accent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                style="@style/TextAppearance.App.Input"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:inputType="textEmailAddress"
                android:hint="@string/hint_email"
                android:textColorHint="@color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/Widget.App.FilledInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tilEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#B1B3BD">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/TextAppearance.App.Input"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:inputType="textPassword"
                android:hint="@string/hint_password"
                android:textColorHint="@color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Términos + checkbox -->
        <LinearLayout
            android:id="@+id/rowTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTerms"
                style="@style/TextAppearance.App.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_have_read_the"
                android:textColor="@color/textGray" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPrivacy"
                style="@style/TextAppearance.App.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/yellowLight"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAccept"
                style="@style/Widget.Material3.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="false"
                app:buttonTint="@color/accent" />
        </LinearLayout>

        <!-- SIGN IN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.App.Button"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/yellowLight"
            app:layout_constraintTop_toBottomOf="@id/rowTerms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
