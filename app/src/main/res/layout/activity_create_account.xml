<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createAccountRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false">

        <!-- HERO -->
        <ImageView
            android:id="@+id/bgShapes"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:src="@drawable/cuatroformas"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backCard"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/googleStroke"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:scaleX="2.3"
                android:scaleY="2.3"
                app:tint="@color/textGray"
                android:src="@drawable/back"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Título -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.App.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/create_your_account"
            android:textAlignment="center"
            android:textColor="@color/yellowLight"
            app:layout_constraintTop_toBottomOf="@id/backCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón Outlook -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnOutlook"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="18dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/outlookBlue"
            app:cardCornerRadius="38dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/iconOutlook"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/outlook"
                    app:tint="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/continue_with_outlook"
                    android:textAppearance="@style/TextAppearance.App.Button"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="38dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/googleStroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnOutlook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/iconGoogle"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google"
                    app:tint="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/continue_with_google"
                    android:textAppearance="@style/TextAppearance.App.Button"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Separador -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvOr"
            style="@style/TextAppearance.App.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/or_login_with_email"
            android:textAlignment="center"
            android:textColor="@color/textGray"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nombre -->
        <FrameLayout
            android:id="@+id/rowName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilName"
                style="@style/Widget.App.FilledInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    style="@style/TextAppearance.App.Input"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:hint="@string/hint_name"
                    android:textColorHint="@color/textGray"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/iconCheckName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/check"
                app:tint="@color/accent"/>
        </FrameLayout>

        <!-- Email -->
        <FrameLayout
            android:id="@+id/rowEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/rowName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.App.FilledInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/TextAppearance.App.Input"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/textGray"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/iconCheckEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/check"
                app:tint="@color/accent"/>
        </FrameLayout>

        <!-- Password -->
        <FrameLayout
            android:id="@+id/rowPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/rowEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.App.FilledInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    style="@style/TextAppearance.App.Input"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="56dp"
                    android:textColorHint="@color/textGray"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:src="@drawable/closed"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/hint_password"/>
        </FrameLayout>

        <!-- Dropdown tipo de cuenta -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAccountType"
            style="@style/Widget.App.FilledInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:endIconMode="dropdown_menu"
            app:layout_constraintTop_toBottomOf="@id/rowPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actAccountType"
                style="@style/TextAppearance.App.Input"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:hint="@string/account_type"
                android:inputType="none"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Términos -->
        <LinearLayout
            android:id="@+id/rowTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tilAccountType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTerms"
                style="@style/TextAppearance.App.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_have_read_the"
                android:textColor="@color/textGray"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPrivacy"
                style="@style/TextAppearance.App.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/privacy_policy"
                android:textColor="@color/yellowLight"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAccept"
                style="@style/Widget.Material3.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/accent"
                app:useMaterialThemeColors="false"/>
        </LinearLayout>

        <!-- CTA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.App.Button"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/yellowLight"
            app:cornerRadius="28dp"
            android:elevation="12dp"
            android:translationZ="12dp"
            app:layout_constraintTop_toBottomOf="@id/rowTerms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
