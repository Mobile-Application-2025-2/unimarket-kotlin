<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBusinessManage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:contentDescription="@string/cd_business_cover"
        android:scaleType="centerCrop"
        android:src="@drawable/formas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/heroScrimManage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/header_wave"
        android:alpha="0.35"
        app:layout_constraintStart_toStartOf="@id/imgHero"
        app:layout_constraintEnd_toEndOf="@id/imgHero"
        app:layout_constraintTop_toTopOf="@id/imgHero" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentInsetStartWithNavigation="0dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        app:navigationIcon="@drawable/back"
        app:title="@string/business_owner_title"
        app:titleTextAppearance="@style/TextAppearance.App.Body"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollManage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        android:layout_marginTop="-72dp"
        app:layout_constraintTop_toBottomOf="@id/imgHero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="26dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/layoutHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgLogo"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="@string/cd_business_logo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/personajesingup"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                            app:strokeColor="@color/yellowStroke"
                            app:strokeWidth="1dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBusinessNameManage"
                                style="@style/TextAppearance.App.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_primary"
                                tools:text="Subway" />

                            <TextView
                                android:id="@+id/tvBusinessDescription"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textGray"
                                tools:text="Tu mejor aliado para almuerzos universitarios" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_status_chip"
                                android:paddingStart="12dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="4dp"
                                android:text="@string/business_owner_status_open"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                tools:text="Abierto" />

                            <TextView
                                android:id="@+id/btnEditInfo"
                                style="@style/TextAppearance.App.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/business_owner_edit_info"
                                android:textColor="@color/accent"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddProduct"
                        style="@style/Widget.Unimarket.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/business_owner_add_product"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_add_circle_24"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp" />

                    <TextView
                        android:id="@+id/tvSectionProducts"
                        style="@style/TextAppearance.App.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/business_owner_products_section"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOwnerProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_business_owner_product" />

                    <TextView
                        android:id="@+id/tvEmptyOwner"
                        style="@style/TextAppearance.App.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/business_owner_products_empty"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressManage"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
