<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootBuyerFixed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER (fijo) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Brand bar -->
        <LinearLayout
            android:id="@+id/brandBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/imgBrand"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/personajesingup"/>

            <TextView
                android:id="@+id/tvBrand"
                style="@style/TextAppearance.App.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Botón favoritos -->
            <ImageButton
                android:id="@+id/btnFavorites"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favoritos"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/text_primary"
                android:src="@drawable/heart"/>

            <!-- Botón pedidos -->
            <ImageButton
                android:id="@+id/btnOrdersTop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Carrito"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/text_primary"
                android:src="@drawable/carrito"/>
        </LinearLayout>

        <!-- Filtros HORIZONTALES (scrolleables) -->
        <HorizontalScrollView
            android:id="@+id/filtersBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:clipToPadding="false">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="0dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:paddingHorizontal="10dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Todos"
                    android:textColor="@color/black"
                    app:chipMinHeight="36dp"
                    app:chipIcon="@drawable/todos"
                    app:chipIconVisible="true"
                    app:checkedIconVisible="false"
                    app:rippleColor="@color/yellowStroke"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/yellowStroke"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_food"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:paddingHorizontal="10dp"
                    android:checkable="true"
                    android:text="Comida"
                    android:textColor="@color/black"
                    app:chipMinHeight="36dp"
                    app:chipIcon="@drawable/food"
                    app:chipIconVisible="true"
                    app:checkedIconVisible="false"
                    app:rippleColor="@color/yellowStroke"
                    app:chipBackgroundColor="@color/yellowStroke"
                    app:chipStrokeColor="@color/yellowStroke"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_stationery"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:paddingHorizontal="10dp"
                    android:checkable="true"
                    android:text="Papeleria"
                    android:textColor="@color/black"
                    app:chipMinHeight="36dp"
                    app:chipIcon="@drawable/fa_solid_pencil_ruler"
                    app:chipIconVisible="true"
                    app:checkedIconVisible="false"
                    app:rippleColor="@color/yellowStroke"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/yellowStroke"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tutoring"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:paddingHorizontal="10dp"
                    android:checkable="true"
                    android:text="Tutoria"
                    android:textColor="@color/black"
                    app:chipMinHeight="36dp"
                    app:chipIcon="@drawable/tutoria"
                    app:chipIconVisible="true"
                    app:checkedIconVisible="false"
                    app:rippleColor="@color/yellowStroke"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/yellowStroke"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_accessories"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:paddingHorizontal="10dp"
                    android:checkable="true"
                    android:text="Accesorios"
                    android:textColor="@color/black"
                    app:chipMinHeight="36dp"
                    app:chipIcon="@drawable/accesorios"
                    app:chipIconVisible="true"
                    app:checkedIconVisible="false"
                    app:rippleColor="@color/yellowStroke"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/yellowStroke"
                    app:chipStrokeWidth="1dp"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- LISTA (scroll vertical entre header y footer) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBusinesses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="84dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/business_card"
        tools:itemCount="6"/>

    <!-- FOOTER (fijo) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/yellowLight"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TopRoundedOnly">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:weightSum="4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="home"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_shopping_front_24"
                app:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="search"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/footer_shopping_bag_24"/>

            <ImageButton
                android:id="@+id/nav_map"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="map"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/map"/>

            <ImageButton
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="profile"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/baseline_person_outline_24"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>