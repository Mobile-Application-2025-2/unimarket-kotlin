<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.App.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        tools:text="AÃ±adir un producto" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutName"
        style="@style/Widget.App.FilledInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/textGray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputName"
            style="@style/TextAppearance.App.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_owner_product_name"
            android:inputType="textCapSentences" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutImage"
        style="@style/Widget.App.FilledInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:hintTextColor="@color/textGray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputImage"
            style="@style/TextAppearance.App.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_owner_product_image"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/cd_business_product_image"
        android:scaleType="centerCrop"
        android:src="@drawable/formas"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCategory"
        style="@style/Widget.App.FilledInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:hintTextColor="@color/textGray">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/inputCategory"
            style="@style/TextAppearance.App.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_owner_product_category"
            android:inputType="textCapWords" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDescription"
        style="@style/Widget.App.FilledInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:hintTextColor="@color/textGray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDescription"
            style="@style/TextAppearance.App.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_owner_product_description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPrice"
        style="@style/Widget.App.FilledInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:hintTextColor="@color/textGray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPrice"
            style="@style/TextAppearance.App.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_owner_product_price"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Widget.Unimarket.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/business_owner_product_save"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="24dp" />

</LinearLayout>