<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema de la app -->
    <style name="Theme.App" parent="Theme.Material3.Light.NoActionBar">

        <!-- Fondo BLANCO en toda la app (evita el magenta de M3 por defecto) -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>

        <!-- (Opcional) primarios si los quieres fijar -->
        <!-- <item name="colorPrimary">@color/yellowLight</item> -->
        <!-- <item name="colorSecondary">@color/accent</item> -->

        <!-- Componentes pequeÃ±os (CheckBox) con radio redondeado -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>

        <!-- Barra de estado clara sobre fondo blanco -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Radio 8dp redondeado para small components -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>

