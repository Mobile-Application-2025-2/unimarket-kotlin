<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <!-- Título: M PLUS 1p ExtraBold 28sp -->
    <style name="TextAppearance.App.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mplus_1p_extrabold</item>
        <item name="fontFamily">@font/mplus_1p_extrabold</item>
    </style>

    <!-- Botones: Poppins Medium 14sp -->
    <style name="TextAppearance.App.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Texto normal -->
    <style name="TextAppearance.App.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Separador: Poppins Regular 14sp -->
    <style name="TextAppearance.App.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Inputs: Poppins Light 16sp -->
    <style name="TextAppearance.App.Input">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- TextInputLayout “filled” sin subrayado, esquinas 15dp -->
    <style name="Widget.App.FilledInput" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/lightGray</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Input</item>
    </style>

    <style name="ShapeAppearance.App.Input" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Checkbox (colores por tema; el radio lo maneja M3) -->
    <style name="Widget.App.RoundedCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!-- Welcome page -->
    <style name="TextAppearance.Unimarket.Display" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textStyle">bold</item>

        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Unimarket.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_caption</item>

        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Unimarket.Caption.Link" parent="TextAppearance.Unimarket.Caption">

        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Unimarket.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/btn_radius_pill</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="elevation">@dimen/btn_elevation</item>
    </style>

    <style name="TextAppearance.App.BodyLight">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption.ExtraLight12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_extralight</item>
        <item name="fontFamily">@font/poppins_extralight</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Título: M PLUS 1p ExtraBold 20sp -->
    <style name="TextAppearance.App.UserName">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mplus_1p_extrabold</item>
        <item name="fontFamily">@font/mplus_1p_extrabold</item>
    </style>
    <style name="ShapeAppearance.App.TopRoundedOnly" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.App.BusinessFilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.App.Body</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/business_chip_text</item>
        <item name="chipBackgroundColor">@color/business_chip_bg</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipSpacing">12dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Input</item>
    </style>

</resources>

